<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.android.TTW"
      android:versionCode="1"
      android:installLocation="preferExternal"
      android:versionName="1.0">
    <application android:icon="@drawable/icon" 
    			android:label="@string/app_name" 
    			android:debuggable="true"
				android:theme="@style/Theme.MyLight">
     
        
        
        
		<activity android:name="TaskTimeWatcheMain"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
		</activity>
		<activity android:name="TaskTimeWatcheEditor"
                 android:windowSoftInputMode="adjustPan"  >
		</activity>

		<activity android:name="TaskTimeWatcheHistory"
                 android:windowSoftInputMode="adjustPan"  >
		</activity>     
		<activity android:name="CategoryEditor"
                 android:windowSoftInputMode="adjustPan"  >
		</activity>
		<activity android:name="TaskTimeWatcheGraph"
                 android:windowSoftInputMode="adjustPan"  >
		</activity>         
		<activity android:name="GraphDrawer"
                 android:windowSoftInputMode="adjustPan"  >
		</activity>     
       
    </application>
    <uses-sdk android:minSdkVersion="8" 
    	android:maxSdkVersion="8" 
    	android:targetSdkVersion="8" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
</manifest> 